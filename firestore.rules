rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura pública de servicios activos
    match /services/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == resource.data.authorUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.authorUid;
    }
    
    // Otras colecciones requieren autenticación
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}